<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.cookiecuttr"
    purge="False">

    <configlet
        title="CookieCuttr"
        action_id="cookiecuttr"
        appId="collective.cookiecuttr"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@cookiecuttr-settings"
        icon_expr="string:$portal_url/++resource++collective.cookiecuttr/cookiecuttr.png"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
